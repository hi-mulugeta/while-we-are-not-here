{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID from Firebase Auth."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        },
        "role": {
          "type": "string",
          "description": "The user's role in the application.",
          "enum": ["user", "admin"]
        }
      },
      "required": ["uid", "email", "role"]
    },
    "MessageSlip": {
      "title": "Message Slip",
      "description": "Represents a single message slip.",
      "type": "object",
      "properties": {
        "recipient": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "time": { "type": "string" },
        "senderName": { "type": "string" },
        "senderOrg": { "type": "string" },
        "phone": { "type": "string" },
        "statusTelephoned": { "type": "boolean" },
        "statusCameToSeeYou": { "type": "boolean" },
        "statusWantsToSeeYou": { "type": "boolean" },
        "statusReturnedCall": { "type": "boolean" },
        "statusUrgent": { "type": "boolean" },
        "statusPleaseCall": { "type": "boolean" },
        "statusWillCallAgain": { "type": "boolean" },
        "statusRush": { "type": "boolean" },
        "message": { "type": "string" },
        "creatorId": { "type": "string", "description": "The UID of the user who created the slip." },
        "createdAt": { "type": "string", "format": "date-time", "description": "Server timestamp of when the message was created." }
      },
      "required": [
        "recipient",
        "date",
        "time",
        "senderName",
        "message",
        "creatorId",
        "createdAt"
      ]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores public profiles for users. Document ID is the Firebase Auth UID."
    },
    "/messageSlips/{messageSlipId}": {
      "schema": { "$ref": "#/entities/MessageSlip" },
      "description": "Collection of all message slips created by all users."
    }
  }
}
