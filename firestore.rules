rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Security Rules for User Profiles
    match /users/{userId} {
      // ANY authenticated user can create their own profile, as long as the UID matches.
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      
      // Users can get their own profile, Admins can get any profile
      allow get: if isOwner(userId) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // Users can update their own profile. Admins can update any profile (e.g., to change a role).
      // The `isOwner` check works for updates because the document (resource) already exists.
      allow update: if isOwner(userId) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // Only admins can list users
      allow list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // Deletion is disallowed for safety
      allow delete: if false;
    }

    // Security Rules for Message Slips
    match /messageSlips/{messageSlipId} {
      // ANY authenticated user can create a message slip, as long as they are the creator
      allow create: if isSignedIn() && request.resource.data.creatorId == request.auth.uid;
      
      // Users can get their own message slips, Admins can get any
      allow get: if isSignedIn() && (resource.data.creatorId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      
      // Admins can list all message slips, users can list their own
      allow list: if isSignedIn();
      
      // Only the creator can update or delete their own message slip
      allow update, delete: if isSignedIn() && resource.data.creatorId == request.auth.uid;
    }
  }
}
