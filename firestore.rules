rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Check if the user document exists and has the role 'admin'
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Security Rules for User Profiles
    match /users/{userId} {
      // ANY authenticated user can create their own profile.
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      
      // Users can get their own profile, Admins can get any profile.
      allow get: if isOwner(userId) || isAdmin();
      
      // Users can update their own profile. Admins can update any profile.
      allow update: if isOwner(userId) || isAdmin();
      
      // Only admins can list users.
      allow list: if isAdmin();
      
      // Deletion is disallowed for safety.
      allow delete: if false;
    }

    // Security Rules for the messageSlips collection
    match /messageSlips/{messageSlipId} {
      // Users can read/query slips if they are the creator, Admins can read/query any slip.
      // This rule enables both single-doc reads and client-side queries like `where('creatorId', '==', user.uid)`.
      allow read: if (isSignedIn() && resource.data.creatorId == request.auth.uid) || isAdmin();
      
      // ANY authenticated user can create a message slip, as long as they are the creator.
      allow create: if isSignedIn() && request.resource.data.creatorId == request.auth.uid;
      
      // Only the creator can update or delete their own message slip.
      allow update, delete: if isSignedIn() && resource.data.creatorId == request.auth.uid;
    }
  }
}
